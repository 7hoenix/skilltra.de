<%= form_for [@user, @survey] do |f| %>
    <% if @survey.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@survey.errors.count, "error") %> prohibited this account from being saved:</h2>

          <ul>
            <% @survey.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>





    <div class="form-group">

      <h3 class="align-center">How many years of experience does <%= @user.name %> have? </h3>

      <%= f.label :months_of_experience, "How long has #{@user.name} been doing #{@survey.skill_set}?", class: "heading" %><br>
      <%= f.select :months_of_experience, [['Apprentice (< 6 months)', 6], ['Approx. 1 year', 12], ['2 years', 24], ['> 3 years', 36]] %>
      <%= f.submit 'next', class: "btn btn-primary btn-lg" %>
    </div>

<% end %>