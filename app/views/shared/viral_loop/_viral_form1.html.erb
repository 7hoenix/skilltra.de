<%= form_for [@user, @survey] do |f| %>
    <% if @survey.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@survey.errors.count, "error") %> prohibited this account from being saved:</h2>

          <ul>
            <% @survey.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <div class="form-group">
      <h3 class="align-center">What skill set would you be excited to receive feedback on? </h3>


      <%= f.label :skill_set, class: "heading" %><br>
      <%= f.select :skill_set, [['Programming','Programming'],['Marketing','Marketing'],['Design','Design'],['Business development','Business development']] %>
      <%= f.submit 'next', class: "btn btn-primary btn-lg" %>
    </div>

<% end %>