<div class="container-home">

<h1>Blog Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.author %></td>
        <td><%= blog.content %></td>
        <td><%= link_to 'Show', blog %></td>

        <td><%= link_to 'View Comments', blog_comments_path(blog_id: blog.id) %>
          <td><%= link_to 'Add Comment', new_blog_comment_path(blog_id: blog.id) %>

      <% if current_user.id == 1 %>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% if current_user.id == 1 %>
<td><%= link_to 'New Blog', new_blog_path %></td>
<% end %>
<br>
</div>
