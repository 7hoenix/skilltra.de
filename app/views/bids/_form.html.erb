<%= form_for [@post, @bid] do |f| %>
  <% if @bid.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bid.errors.count, "error") %> prohibited this bid from being saved:</h2>

      <ul>
      <% @bid.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 
  
  
<% if @post.user != current_user %>
               

  <div class="field">
    <%= f.label :bid %><br>
    <%= f.number_field :bid %>
  </div>
 <h4><%= current_user.credit.debit if current_user.credit %> Credits Max</h4>

  <div class="field">
    <%= f.label :bidinfo, "Enter information on your Bid" %><br>
    <%= f.text_field :bidinfo %>
  </div>

<%= f.hidden_field :post_id, :value => @post.id %>
<%= f.hidden_field :user_id, :value => current_user.id %>

  <div class="actions">
    <%= f.submit %>
  </div>
  <% end %>
<% end %>
