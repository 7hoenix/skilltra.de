<div class="container-home">
    <div id="accounts" class="transitions-enabled">
    <% @accounts.each do |account| %>
         <div class="box panel panel-default">
           <div class="panel-body">
    <h3><%= account.user.name %></h3>
             <div class="col-md-6">
    <% if account.user.image %>
        <p><%= image_tag account.user.image, class: "circle" %></p>
    <% else %>
        <p><%= image_tag('userdefaultimagesm.png', class: "circle") %></p>
    <% end %>
      </div>
             <% if account.user.jobs_completed %>
                 <p><%= account.user.jobs_completed %> Favors done</p>
             <% else %>
                 <p>I haven't done any favors yet!</p>
             <% end %>

             <% if account.user.jobs_completed %>
             <p><%= account.user.average_score %> Average Score</p>
             <% else %>
             <p>I'm Still New!</p>
            <% end %>
    <h2><%= account.primarySkill %></h2>
    <p><%= account.bio %></p>

    <% if account.user==current_user %>
        <p><%= link_to edit_account_path(account), class: "btn btn-primary btn-lg" do %>
        <span class="glyphicon glyphicon-pencil"></span> Update Profile
        <% end %>
      </p>
    <% else %>
        <p>
        <%= link_to account_path(account.user_id), class: "btn btn-default btn-lg" do %>
        <span class="glyphicon glyphicon-expand"></span> View Profile
        <% end %>
      </p>
        <p><%= link_to new_conversation_path(:account => account.user.email), class: "btn btn-success btn-lg" do %>
        <span class="glyphicon glyphicon-envelope"></span> <%= account.user.name %>
        <% end %>
      </p>

      <p><%= link_to "Add #{account.user.name} to your team", { :controller => 'team_members', :action => 'create', :id => account.user.id, :user_id => current_user.id },
      data: { confirm: "Send Team Request to #{account.user.name}?" } %>
      </p>

     <% end %>

       </div>
    </div>
    <% end %>


    </div>
  <%= will_paginate @accounts, renderer: BootstrapPagination::Rails %>
</div>
