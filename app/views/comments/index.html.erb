<div class="container-home">

<h1><%= @blog.title %></h1>
<p><%= @blog.author %></p>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Commenter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <% if comment.blog_id == @blog.id %>
        <td><%= comment.content %></td>
        <td><%= comment.commenter %></td>
        <% end %>

      <% if false %>
        <td><%= link_to 'Edit', edit_blog_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', blog_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_blog_comment_path %>
</div>
