<%= form_for @post, html: { multipart: true } do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label 'Headline', class: "heading" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label 'The deets', class: "heading" %><br>
    <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label 'Whose skill set is this?', class: "heading" %><br>
    <%= f.select :category, [['Developer','Programming'],['Marketer','Marketing'],['Designer','Design'],['User Experience Expert','User Experience'],['Business Guru','Business']] %>
  </div>

  
  <div class="form-group">
    <%= f.submit "Get Help!", class: "btn btn-primary btn-large" %>
  </div>
<% end %>
