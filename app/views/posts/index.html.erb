<%= render 'pages/home' unless user_signed_in? %>  

  <div id="posts" class="transitions-enabled">
    
    <% @posts.each do |post| %>
      <div class="box panel panel-default">
        
        <div class="panel-body">
          <h2><%= link_to post.title, post %></h2><br>
          <div class="col-md-6">

          <% if post.user %>
            <p><%= link_to image_tag(post.user.image), post %></p>
            <% end %>
          </div>
          <P><strong><%= post.user.name if post.user %></strong></P>
          
          <p><%= post.description %></p><br>
          <p><b><%= post.category %></b></p><br>
          
      <% if post.user == current_user %>
        <div class="actions">
          <%= link_to "Edit", edit_post_path(post), class: "btn btn-default btn-lg" %>
            
            
          <%= link_to "Delete", post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-lg" %>
            
            
          </div>
      <% else %>
        <%= link_to "Bid on Post", new_post_bid_path(post), class: "btn btn-default btn-lg" %>
      <% end %>
      <br>
      <%= link_to 'Show Bids', post_bids_path(post), class: "btn btn-default btn-lg" %>


        </div>
      </div>
    <% end %>
  </div>

  
   <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
 