<div class="container-home">
<h1 class="heading">Projects I'm Working On</h1>

<table class="table table-striped">
  <thead class="heading">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <% if (job.user == current_user || job.bid_user_id == current_user.id) && job.completed != true %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.description %></td>
        <td><%= link_to 'Show', job, class: "btn btn-default btn-lg" %></td>
      </tr>
        <% end %>
    <% end %>
  </tbody>
</table>
</div>